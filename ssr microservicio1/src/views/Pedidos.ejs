<% layout('layouts/main') -%>
<section style="max-width: 1200px; margin: 20px auto;">
  <a href="/api/pedidos/agregar">
    <button>Agregar un pedido</button>
  </a>
  <table class="table">
    <thead>
      <tr>
        <th scope="col"></th>
        <th scope="col">Productos</th>
        <th scope="col">Descripcion</th>
        <th scope="col">Producto</th>
        <th scope="col">Numero Pedido</th>
        <th scope="col">Fecha Pedido</th>
        <th scope="col">Hora Pedido</th>
        <th scope="col">Total</th>
        <th scope="col">Estado</th>
        <th scope="col">Accion</th>
      </tr>
    </thead>
    <tbody>
        <% if (data.length > 0) {%>
            <% for (let i=0; i<data.length; i++) { %>
                <tr>
                    <th scope="row">
                        <%= (i+1) %>
                    </th>
                    <td><%= data[i].detalle_productos %></td>
                    <td><%= data[i].descripcion_pedido %></td>
                    <td><%= data[i].producto_solicitado %></td>
                    <td><%= data[i].num_pedido %></td>
                    <td><%= data[i].fecha_pedido %></td>
                    <td><%= data[i].hora_pedido %></td>
                    <td><%= data[i].total %></td>
                    <td><%= data[i].estado %></td>
                    <td>
                        <a href="/api/pedidos/editar/<%= data[i].id %>">Editar</a>
                        <a href="/api/pedidos/delete/<%= data[i].id %>">Eliminar</a>
                    </td>
                </tr>
                <% } %>
                    <% }else { %>
                        <tr>
                            <td colspan="6">NO HAY REGISTROS</td>
                        </tr>
                        <% } %>
      
    </tbody>
  </table>
</section>
